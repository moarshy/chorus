{
  "name": "chorus",
  "version": "0.1.0",
  "description": "A Slack-like Electron app for orchestrating Claude Code agents across GitHub repositories",
  "main": "./out/main/index.js",
  "author": "Chorus Team",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "bun run typecheck && electron-vite build",
    "start": "electron-vite preview",
    "typecheck": "bun run typecheck:node && bun run typecheck:web",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "lint": "eslint --cache .",
    "format": "prettier --write .",
    "postinstall": "electron-builder install-app-deps",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:win": "electron-vite build && electron-builder --win",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.55",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/search": "^6.5.11",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@openai/agents": "^0.3.4",
    "@uiw/codemirror-theme-vscode": "^4.25.3",
    "@uiw/react-codemirror": "^4.25.3",
    "electron-store": "^8.2.0",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "mermaid": "10.9.1",
    "openai": "^6.9.1",
    "react": "^19.1.1",
    "react-arborist": "^3.4.0",
    "react-dom": "^19.1.1",
    "react-markdown": "9.0.1",
    "remark-gfm": "4.0.0",
    "textarea-caret": "^3.1.0",
    "uuid": "^11.1.0",
    "zod": "3",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^22.18.6",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.3",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.2",
    "vite": "^7.1.6"
  }
}
